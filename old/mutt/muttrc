# General configuration.

# Folders.
set header_cache = ~/.mutt/cache/headers
set message_cachedir = ~/.mutt/cache/bodies
set certificate_file = ~/.mutt/certificates
set mailcap_path = ~/.mutt/attachments

# Connection.
set move = no  # Stop asking to "move read messages to mbox"!
set imap_keepalive = 900
set mail_check = 120
set timeout = 5  # Thanks Google for not following the spec...

# External applications.
set editor = "vim"

# UI.
set mbox_type = Maildir
set beep_new

# Email headers.
ignore *
unignore from: to: cc: date: subject:
unhdr_order *
hdr_order from: to: cc: date: subject:

# Sidebar.
color sidebar_new green default
set sidebar_visible = no
set sidebar_shortpath = yes

# Statusbar.
set status_chars  = " *%A"
set status_format = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?u? (%u unread)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"

# Index.
set date_format = "%b %e"
set index_format = "[%Z]  %D  %-20.20F  %s"
set sort = threads
set sort_aux = reverse-last-date-received
set uncollapse_jump
set sort_re
set reply_regexp = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"
exec first-entry

# Pager.
set pager_index_lines = 5
#set pager_context = 3
set pager_stop  # Don't go to the next message automatically.
set menu_scroll
set tilde
unset markers  # No more ugly +'s.
set quote_regexp = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"
alternative_order text/plain text/enriched text/html

# Compose view.
set realname = "Nathan Campos"
set envelope_from
set sig_dashes
set edit_headers
set fast_reply
set askcc
set fcc_attach
set forward_format = "Fwd: %s"
set forward_decode
set attribution = "On %d, %n wrote:"
set reply_to
set reverse_name
set include
set forward_quote

# Sources.
source ~/.mutt/macros.muttrc
source ~/.mutt/themes/tomorrow-night

# Accounts.
source ~/.mutt/accounts/eeepc904
folder-hook $from "source ~/.mutt/accounts/eeepc904"

source ~/.mutt/accounts/dreamintech
folder-hook $from "source ~/.mutt/accounts/dreamintech"

