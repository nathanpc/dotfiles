# .bashrc
# Bash configuration file.
#
# Author: Nathan Campos <hi@nathancampos.me>

# Set default applications.
export EDITOR=vim
export VISUAL=${EDITOR}
export PAGER=more

# Set aliases
alias ls='gls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'


# Set the search path for programs.
PATH=$HOME/bin:/bin:/sbin:/usr/bin:/usr/sbin:/usr/X11R7/bin:/usr/pkg/bin
PATH=${PATH}:/usr/pkg/sbin:/usr/games:/usr/local/bin:/usr/local/sbin
export PATH

# Configure the shell to load .shrc at startup time.
# This will happen for every shell started, not just login shells.
export ENV=$HOME/.shrc

# Enable completion.
if [ -r /usr/pkg/share/bash-completion/bash_completion ]; then
	. /usr/pkg/share/bash-completion/bash_completion
fi

# Set prompt.
function prompt_ecode() {
	RETVAL=$?
	[ $RETVAL -ne 0 ] && echo -e "\033[0;31m"
}
export PS1="[\[\033[01;33m\]\u@\h\[\033[00m\] \[\033[01;34m\]\w\[\033[00m\]] \`prompt_ecode\`\\$\033[0m "

# Set pksrc mirror.
PKG_PATH="http://ftp.NetBSD.org/pub/pkgsrc/packages/NetBSD/amd64/8.1/All"
export PKG_PATH

# Include my own scripts to the PATH.
PATH=${PATH}:$HOME/dotfiles/scripts

