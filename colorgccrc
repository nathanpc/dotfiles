# ~/.colorgccrc
# Configuration file for colorgcc <http://schlueters.de/colorgcc.html>
#
# Author: Nathan Campos <nathan@innoveworkshop.com>

# Compiler locations.
xtensa-lx106-elf-gcc: /opt/esp-open-sdk/xtensa-lx106-elf/bin/xtensa-lx106-elf-gcc

# Warnings.
warningFileNameColor: reset
warningNumberColor: white
warningMessageColor: yellow

# Errors.
errorFileNameColor: reset
errorNumberColor: white
errorMessageColor: bold red

# Text between ` and ' is usually source code.
srcColor: bold cyan

# Reset text other than a warning or error.
introColor: reset

# Don't do color if our terminal type ($TERM) is one of these. Separated by spacce.
nocolor: dumb

